{
  "name": "react-native-fast-base",
  "version": "1.0.1",
  "description": "Easier and faster developing your React Native apps",
  "main": "src/index.ts",
  "keywords": [
    "react-native",
    "reactjs",
    "reactnative",
    "fast-base",
    "bootstrap",
    "darkmode",
    "wrapper",
    "layouts"
  ],
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mhp23/react-native-fast-base.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/react-native-vector-icons": "^6.4.6",
    "react-native-keyboard-aware-scroll-view": "^0.9.4",
    "react-native-responsive-dimensions": "^3.1.1",
    "react-native-vector-icons": "^8.1.0"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.64.5",
    "@types/react-test-renderer": "^16.9.2",
    "babel-jest": "^26.6.3",
    "eslint": "^7.14.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "metro-react-native-babel-preset": "^0.64.0",
    "react": "17.0.1",
    "react-native": "0.64.1",
    "react-test-renderer": "17.0.1",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/@codler/react-native-keyboard-aware-scroll-view"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ],
    "**/*.md": [
      "prettier --single-quote --trailing-comma=es5 --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "bugs": {
    "url": "https://github.com/Mhp23/react-native-fast-base/issues"
  },
  "homepage": "https://github.com/Mhp23/react-native-fast-base#readme"
