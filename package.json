{
  "name": "@fast-base/native",
  "version": "2.0.2",
  "description": "⭐️ Easier & Faster Develop Your React Native (Expo) App (Android, iOS & Web) ⭐️",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install"
  },
  "keywords": [
    "android",
    "ios",
    "web",
    "react native",
    "reactjs",
    "native",
    "react",
    "ui library",
    "responsive ui",
    "bootstrap",
    "dark mode",
    "mergeRefs",
    "react native ui",
    "react native kit",
    "react native component"
  ],
  "repository": "https://github.com/Mhp23/react-native-fast-base",
  "author": "mhp23 <business.mhpdev@gmail.com> (https://github.com/Mhp23)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mhp23/react-native-fast-base/issues"
  },
  "homepage": "https://github.com/Mhp23/react-native-fast-base#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.5",
    "@evilmartians/lefthook": "^1.4.2",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/react-native": "^12.0.0",
    "@types/jest": "^28.1.2",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.70.0",
    "commitlint": "^17.6.5",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.71.4",
    "react-native-builder-bob": "^0.21.3",
    "react-native-safe-area-context": "^4.5.3",
    "react-test-renderer": "^18.2.0",
    "reassure": "^0.9.1",
    "release-it": "^15.0.0",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-safe-area-context": "*"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "packageManager": "^yarn@1.22.15",
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "./jest-setup.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native))"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "avoid",
          "bracketSameLine": true,
          "bracketSpacing": false,
          "singleQuote": true,
          "trailingComma": "all"
        }
      ],
      "react-hooks/exhaustive-deps": [
        "warn",
        {
          "additionalHooks": "(useStyle)"
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "deepmerge": "^4.3.1",
    "react-native-full-responsive": "^1.0.5"
  }
}
